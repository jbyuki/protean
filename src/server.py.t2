import asyncio
import json

;; define functions
async def start_server(host='localhost', port=8089):
	server = await asyncio.start_server(on_connect, host, port)
	print(f"Server started on {port}")
	async with server:
		await server.serve_forever()

;; define functions
async def on_connect(reader, writer):
